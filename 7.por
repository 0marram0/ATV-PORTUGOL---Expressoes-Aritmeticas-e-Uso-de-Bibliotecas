programa {
  funcao inicio() {

    inteiro idade_cria, idade_soma

    escreva("Olá criança! Eu sei, eu sei, você está a dias sem dormir pensando sobre qual seria o número de todas suas idades somadas juntas. \n")
    escreva("Bom, para sua sorte, eu estou aqui para isso. Me diga criança, quantos anos você tem? ")
    leia(idade_cria)

    idade_soma = idade_cria*((idade_cria + 1)/2)

    escreva("A soma de suas idades é igual a: ", idade_soma)

  }
}
